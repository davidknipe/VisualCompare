<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net461;net5.0</TargetFrameworks>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>VisualCompareMode</RootNamespace>
    <AssemblyName>VisualCompareMode</AssemblyName>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Title>Visual red/green comparison mode for Episerver</Title>
    <Version>1.0.8-alpha3</Version>
    <Copyright>Copyright © 2021</Copyright>
    <Authors>David Knipe</Authors>
    <Description>Add a visual comparison for content</Description>
    <PackageProjectUrl>http://www.david-tec.com/2018/03/visual-compare-option-available-for-episerver-11/</PackageProjectUrl>
    <PackageTags>Episerver CMS</PackageTags>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.ComponentModel.DataAnnotations" />
    <Reference Include="System.configuration" />
    <Reference Include="System.Core" />
    <Reference Include="System.Data.OracleClient" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Net" />
    <Reference Include="System.Runtime.Remoting" />
    <Reference Include="System.Security" />
    <Reference Include="System.Transactions" />
    <Reference Include="System.Web" />
    <Reference Include="System.Xml.Linq" />
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Xml" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="Models\GetDiffBootstrapperModel.cs" />
    <Compile Include="ViewConfiguration\CompareWithMarkup.cs" />
    <Compile Include="Init\RegisterVisualCompareRoute.cs" />
    <Compile Include="Controllers\VisualCompareController.cs" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="modules\_protected\VisualCompareMode\ClientResources\Scripts\compareWithMarkupView.js" />
    <Content Include="modules\_protected\VisualCompareMode\ClientResources\Styles\DiffStyles.css" />
    <Content Include="modules\_protected\VisualCompareMode\EpiserverOverridenLibs\CustomCompareCommandProvider.js" />
    <Content Include="modules\_protected\VisualCompareMode\EpiserverOverridenLibs\customWidgetSwitcher.js" />
    <None Include="web.config.transform" />
    <None Include="app.config" />
    <Content Include="modules\_protected\VisualCompareMode\module.config">
      <SubType>Designer</SubType>
    </Content>
    <Content Include="modules\_protected\VisualCompareMode\Views\GetDiffBootstrapper.cshtml" />
    <Content Include="modules\_protected\VisualCompareMode\Views\Web.config">
      <SubType>Designer</SubType>
    </Content>
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="EPiServer.CMS.UI.Core" Condition="'$(TargetFramework)' == 'net461'">
      <Version>[11.1.0, 12.0)</Version>
    </PackageReference>
    <PackageReference Include="EPiServer.CMS.UI.Core" Condition="'$(TargetFramework)' == 'net5.0'">
      <Version>[12.2.0, 13.0)</Version>
    </PackageReference>
    <PackageReference Include="htmldiff.net">
      <Version>1.4.0</Version>
    </PackageReference>
    <PackageReference Include="System.Security.Cryptography.Xml" Condition="'$(TargetFramework)' == 'net461'">
      <Version>4.4.2</Version>
    </PackageReference>
    <PackageReference Include="System.Security.Cryptography.Xml" Condition="'$(TargetFramework)' == 'net5.0'">
      <Version>5.0.0</Version>
    </PackageReference>	
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Helpers\" />
    <Folder Include="Interfaces\" />
    <Folder Include="Properties\" />
  </ItemGroup>
</Project>